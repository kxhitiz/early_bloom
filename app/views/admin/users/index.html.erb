<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-stone-800">Users</h1>
  <p class="text-stone-500"><%= User.count %> total</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-stone-200 overflow-hidden">
  <table class="w-full">
    <thead class="bg-stone-50 border-b border-stone-200">
      <tr>
        <th class="text-left px-4 py-3 text-sm font-semibold text-stone-600">User</th>
        <th class="text-left px-4 py-3 text-sm font-semibold text-stone-600">Email</th>
        <th class="text-left px-4 py-3 text-sm font-semibold text-stone-600">Stats</th>
        <th class="text-left px-4 py-3 text-sm font-semibold text-stone-600">Joined</th>
        <th class="text-right px-4 py-3 text-sm font-semibold text-stone-600">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-stone-100">
      <% @users.each do |user| %>
        <tr class="hover:bg-stone-50">
          <td class="px-4 py-3">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-700 font-semibold text-sm">
                <%= user.name.first.upcase %>
              </div>
              <div>
                <%= link_to user.name, admin_user_path(user), class: "font-medium text-stone-800 hover:text-emerald-700" %>
                <% if user.admin? %>
                  <span class="ml-2 text-xs px-2 py-0.5 bg-purple-100 text-purple-700 rounded">Admin</span>
                <% end %>
              </div>
            </div>
          </td>
          <td class="px-4 py-3 text-sm text-stone-600">
            <%= user.email %>
          </td>
          <td class="px-4 py-3 text-sm text-stone-500">
            <%= user.posts.count %> posts, <%= user.comments.count %> comments
          </td>
          <td class="px-4 py-3 text-sm text-stone-500">
            <%= time_ago_in_words(user.created_at) %> ago
          </td>
          <td class="px-4 py-3 text-right">
            <%= link_to "View", admin_user_path(user), class: "text-sm text-emerald-600 hover:text-emerald-700 mr-3" %>
            <%= link_to "Profile", user_path(user), target: "_blank", class: "text-sm text-stone-600 hover:text-emerald-700" %>
            <% unless user == Current.user %>
              <%= link_to "Delete", admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{user.name}? This action cannot be undone." }, class: "text-sm text-red-600 hover:text-red-700 ml-3" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6">
  <%= paginate @users %>
</div>
