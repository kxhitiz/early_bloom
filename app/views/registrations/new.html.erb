<div class="max-w-md mx-auto">
  <div class="bg-white p-8 rounded-lg shadow-sm border border-stone-200">
    <h1 class="text-3xl font-bold text-emerald-700 mb-6 text-center">Join Early Bloom ðŸŒ¸</h1>
    
    <%= form_with model: @user, url: signup_path, class: "space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="p-4 bg-red-50 border border-red-200 text-red-800 rounded-lg">
          <p class="font-semibold mb-2"><%= pluralize(@user.errors.count, "error") %> prevented this from saving:</p>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Your Name", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "How should we call you?" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "you@example.com" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
      </div>

      <div>
        <%= f.label :bio, "A little about you (optional)", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.text_area :bio, rows: 3, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Share what brings you to Early Bloom..." %>
      </div>

      <div class="pt-4">
        <%= f.submit "Create Account", class: "w-full px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-stone-600">
      Already have an account? 
      <%= link_to "Login here", login_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
    </p>
  </div>
</div>
