<% if @recent_posts.any? %>
  <div class="mt-16">
    <h2 class="text-2xl font-bold text-emerald-700 mb-6">Recent from the Community</h2>
    <div class="space-y-4">
      <% @recent_posts.each do |post| %>
        <div class="bg-white p-6 rounded-lg shadow-sm border border-stone-200 hover:border-emerald-200 transition">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
              <%= link_to user_path(post.user), class: "w-10 h-10 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-700 font-semibold hover:bg-emerald-200 transition" do %>
                <%= post.user.name.first %>
              <% end %>
              <div>
                <%= link_to post.user.name, user_path(post.user), class: "font-medium text-stone-800 hover:text-emerald-700" %>
                <p class="text-sm text-stone-500">
                  <%= post.child_profile.name %> Â· <%= post.child_profile.age_in_months %> months old
                </p>
              </div>
            </div>
            <div class="flex gap-1">
              <% if post.category %>
                <span class="text-xs px-2 py-1 bg-stone-100 text-stone-600 rounded"><%= post.category.icon %> <%= post.category.name %></span>
              <% end %>
              <span class="text-xs px-2 py-1 bg-emerald-50 text-emerald-700 rounded"><%= post.post_type %></span>
            </div>
          </div>
          
          <% if post.title.present? %>
            <h3 class="text-lg font-semibold text-stone-800 mb-2"><%= post.title %></h3>
          <% end %>
          
          <p class="text-stone-600 mb-3"><%= truncate(post.body, length: 200) %></p>
          
          <%= link_to "Read more â†’", post_path(post), class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
