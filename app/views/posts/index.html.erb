<div>
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-emerald-700">Community Feed</h1>
    <% if logged_in? %>
      <%= link_to "Share Your Experience", new_post_path, class: "px-4 sm:px-6 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold text-center text-sm sm:text-base" %>
    <% end %>
  </div>

  <!-- Search -->
  <%= form_with url: posts_path, method: :get, class: "mb-6", data: { turbo_frame: "_top" } do |f| %>
    <div class="flex gap-2">
      <%= f.text_field :q, value: params[:q], placeholder: "Search posts...", class: "flex-1 px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
      <%= f.submit "Search", class: "px-4 sm:px-6 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-medium cursor-pointer" %>
      <% if params[:q].present? %>
        <%= link_to "Clear", posts_path, class: "px-4 py-2 bg-stone-200 hover:bg-stone-300 text-stone-700 rounded-lg font-medium" %>
      <% end %>
    </div>
  <% end %>

  <% if logged_in? && current_user.child_profiles.any? %>
    <div class="flex flex-wrap gap-2 mb-4">
      <%= link_to feed_path, class: "px-3 sm:px-4 py-2 rounded-lg font-medium text-sm sm:text-base #{@child_profile ? 'bg-emerald-600 text-white' : 'bg-stone-100 text-stone-600 hover:bg-stone-200'}" do %>
        For You
        <% if @child_profile %>
          <span class="text-emerald-200 text-xs sm:text-sm">(Â±3 months)</span>
        <% end %>
      <% end %>
      <%= link_to "Explore All", posts_path, class: "px-3 sm:px-4 py-2 rounded-lg font-medium text-sm sm:text-base #{!@child_profile && !@current_category ? 'bg-emerald-600 text-white' : 'bg-stone-100 text-stone-600 hover:bg-stone-200'}" %>
    </div>
  <% end %>

  <% unless logged_in? %>
    <div class="bg-gradient-to-r from-emerald-50 to-teal-50 border border-emerald-200 rounded-lg p-4 mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <p class="text-emerald-800 font-medium">Join the conversation</p>
        <p class="text-emerald-600 text-sm">Sign up to share your experiences, ask questions, and support other parents.</p>
      </div>
      <%= link_to "Sign Up Free", signup_path, class: "px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-medium text-center text-sm whitespace-nowrap" %>
    </div>
  <% end %>

  <% if @categories&.any? && !@child_profile %>
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-2 mb-6">
      <%= link_to "All", posts_path, class: "px-2 py-2 rounded-lg text-xs sm:text-sm font-medium text-center truncate #{@current_category.nil? ? 'bg-emerald-600 text-white' : 'bg-stone-100 text-stone-600 hover:bg-stone-200'}" %>
      <% @categories.each do |category| %>
        <%= link_to category_posts_path(category), class: "px-2 py-2 rounded-lg text-xs sm:text-sm font-medium text-center truncate #{@current_category == category ? 'bg-emerald-600 text-white' : 'bg-stone-100 text-stone-600 hover:bg-stone-200'}" do %>
          <%= category.icon %> <%= category.name %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
        <article class="bg-white p-4 sm:p-6 rounded-lg shadow-sm border border-stone-200 hover:border-emerald-200 transition">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <%= link_to user_path(post.user), class: "w-10 sm:w-12 h-10 sm:h-12 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-700 font-bold text-base sm:text-lg hover:bg-emerald-200 transition flex-shrink-0" do %>
                <%= post.user.name.first.upcase %>
              <% end %>
              <div class="min-w-0">
                <%= link_to post.user.name, user_path(post.user), class: "font-semibold text-stone-800 hover:text-emerald-700" %>
                <p class="text-xs sm:text-sm text-stone-500">
                  <%= post.child_profile.name %> Â· <%= post.child_profile.age_in_months %> months Â·
                  <%= time_ago_in_words(post.published_at) %> ago
                </p>
              </div>
            </div>
            <div class="flex flex-col items-end gap-1 flex-shrink-0">
              <% if post.category %>
                <%= link_to category_posts_path(post.category), class: "text-xs px-2 py-1 bg-stone-100 text-stone-600 rounded-full hover:bg-stone-200 transition" do %>
                  <span class="hidden sm:inline"><%= post.category.icon %></span> <%= post.category.name %>
                <% end %>
              <% end %>
              <%= link_to posts_path(post_type: post.post_type), class: "text-xs px-2 sm:px-3 py-1 bg-emerald-50 text-emerald-700 rounded-full font-medium hover:bg-emerald-100 transition" do %>
                <%= post.post_type %>
              <% end %>
            </div>
          </div>
          
          <% if post.title.present? %>
            <h2 class="text-lg sm:text-xl font-semibold text-stone-800 mb-2 sm:mb-3"><%= post.title %></h2>
          <% end %>
          
          <div class="text-stone-600 mb-4">
            <%= simple_format(truncate(post.body, length: 300)) %>
          </div>

          <% if post.post_type == "question" && post.ai_answer.present? %>
            <div class="bg-white rounded-2xl p-4 mb-4 shadow-[0_2px_12px_-3px_rgba(139,92,246,0.15)]">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 w-7 h-7 rounded-full bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center">
                  <span class="text-white text-xs">âœ¨</span>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-1 mb-1.5">
                    <span class="text-sm font-semibold text-violet-600">Bloom AI</span>
                  </div>
                  <div class="text-sm text-slate-600 leading-relaxed">
                    <%= truncate(post.ai_answer, length: 180, omission: '...') %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="flex items-center gap-4 sm:gap-6 text-xs sm:text-sm text-stone-500">
            <span>ðŸ’¬ <%= post.comments.count %> comments</span>
            <span>ðŸ’š <%= post.reactions.count %> reactions</span>
          </div>

          <div class="mt-4 flex items-center gap-4">
            <%= link_to "Read & Respond", post_path(post), class: "text-emerald-600 hover:text-emerald-700 font-semibold" %>
            <% unless logged_in? %>
              <span class="text-xs text-stone-400">Login to comment & react</span>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>

    <div class="mt-8">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="bg-white p-6 sm:p-12 rounded-lg shadow-sm border border-stone-200 text-center">
      <% if @child_profile %>
        <p class="text-base sm:text-xl text-stone-600 mb-2">No posts from parents with babies around <%= @child_profile.age_in_months %> months old yet.</p>
        <p class="text-sm sm:text-base text-stone-500 mb-4 sm:mb-6">Try exploring all posts from the community!</p>
        <%= link_to "Explore All Posts", posts_path, class: "inline-block px-4 sm:px-6 py-2 sm:py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold text-sm sm:text-base" %>
      <% else %>
        <p class="text-base sm:text-xl text-stone-600 mb-4">No posts yet. Be the first to share!</p>
        <% if logged_in? %>
          <%= link_to "Create the First Post", new_post_path, class: "inline-block px-4 sm:px-6 py-2 sm:py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold text-sm sm:text-base" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
