<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Early Bloom</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-slate-50 text-slate-900 min-h-screen">
    <!-- Top Header -->
    <header class="bg-white border-b border-slate-200 sticky top-0 z-10">
      <div class="flex items-center justify-between px-6 py-3">
        <div class="flex items-center gap-4">
          <h1 class="text-lg font-bold text-slate-900">Early Bloom <span class="text-indigo-600">Admin</span></h1>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-slate-600">Logged in as <strong><%= current_user.name %></strong></span>
          <%= link_to "View Site", root_path, class: "text-sm px-3 py-1.5 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-md font-medium" %>
        </div>
      </div>
    </header>

    <div class="flex min-h-[calc(100vh-57px)]">
      <!-- Sidebar -->
      <aside class="w-56 bg-white border-r border-slate-200 flex-shrink-0">
        <nav class="p-4 space-y-1">
          <%= link_to admin_root_path, class: "flex items-center gap-3 px-3 py-2.5 rounded-md text-sm font-medium #{request.path == admin_root_path ? 'bg-indigo-50 text-indigo-700 border border-indigo-200' : 'text-slate-700 hover:bg-slate-100'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>Dashboard</span>
          <% end %>

          <%= link_to admin_posts_path, class: "flex items-center gap-3 px-3 py-2.5 rounded-md text-sm font-medium #{request.path.start_with?(admin_posts_path) ? 'bg-indigo-50 text-indigo-700 border border-indigo-200' : 'text-slate-700 hover:bg-slate-100'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            <span>Posts</span>
          <% end %>

          <%= link_to admin_comments_path, class: "flex items-center gap-3 px-3 py-2.5 rounded-md text-sm font-medium #{request.path.start_with?(admin_comments_path) ? 'bg-indigo-50 text-indigo-700 border border-indigo-200' : 'text-slate-700 hover:bg-slate-100'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
            <span>Comments</span>
          <% end %>

          <%= link_to admin_users_path, class: "flex items-center gap-3 px-3 py-2.5 rounded-md text-sm font-medium #{request.path.start_with?(admin_users_path) ? 'bg-indigo-50 text-indigo-700 border border-indigo-200' : 'text-slate-700 hover:bg-slate-100'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span>Users</span>
          <% end %>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8">
        <% if flash[:notice] %>
          <div class="mb-6 p-4 bg-green-50 border border-green-300 text-green-800 rounded-lg">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="mb-6 p-4 bg-red-50 border border-red-300 text-red-800 rounded-lg">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
