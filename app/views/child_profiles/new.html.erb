<div class="max-w-md mx-auto">
  <div class="bg-white p-8 rounded-lg shadow-sm border border-stone-200">
    <h1 class="text-3xl font-bold text-emerald-700 mb-2 text-center">Tell us about your little one ðŸ‘¶</h1>
    <p class="text-center text-stone-600 mb-6">This helps us show you relevant content for your child's age.</p>
    
    <%= form_with model: @child_profile, class: "space-y-4" do |f| %>
      <% if @child_profile.errors.any? %>
        <div class="p-4 bg-red-50 border border-red-200 text-red-800 rounded-lg">
          <p class="font-semibold mb-2"><%= pluralize(@child_profile.errors.count, "error") %>:</p>
          <ul class="list-disc list-inside">
            <% @child_profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Child's Name (or nickname)", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "What do you call them?" %>
      </div>

      <div>
        <%= f.label :birth_date, "Birth Date", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.date_field :birth_date, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        <p class="text-sm text-stone-500 mt-1">This helps us show you age-appropriate content</p>
      </div>

      <div class="pt-4">
        <%= f.submit "Continue", class: "w-full px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
