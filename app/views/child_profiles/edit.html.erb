<div class="max-w-md mx-auto">
  <div class="bg-white p-8 rounded-lg shadow-sm border border-stone-200">
    <h1 class="text-2xl font-bold text-emerald-700 mb-2 text-center">Edit Child Profile</h1>
    <p class="text-center text-stone-600 mb-6">Update <%= @child_profile.name %>'s information</p>

    <%= form_with model: @child_profile, class: "space-y-4" do |f| %>
      <% if @child_profile.errors.any? %>
        <div class="p-4 bg-red-50 border border-red-200 text-red-800 rounded-lg">
          <ul class="list-disc list-inside">
            <% @child_profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Child's Name (or nickname)", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
      </div>

      <div>
        <%= f.label :birth_date, "Birth Date", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= f.date_field :birth_date, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        <p class="text-sm text-stone-500 mt-1">Currently <%= @child_profile.age_in_months %> months old</p>
      </div>

      <div class="pt-4 flex items-center gap-4">
        <%= f.submit "Save Changes", class: "flex-1 px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold cursor-pointer" %>
        <%= link_to "Cancel", user_path(current_user), class: "text-stone-600 hover:text-stone-800" %>
      </div>
    <% end %>

    <div class="mt-6 pt-6 border-t border-stone-200">
      <%= button_to "Delete Child Profile", child_profile_path(@child_profile), method: :delete, data: { turbo_confirm: "Are you sure you want to delete #{@child_profile.name}'s profile? This cannot be undone." }, class: "text-red-600 hover:text-red-700 text-sm" %>
    </div>
  </div>
</div>
