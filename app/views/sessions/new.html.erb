<div class="max-w-md mx-auto">
  <div class="bg-white p-8 rounded-lg shadow-sm border border-stone-200">
    <h1 class="text-3xl font-bold text-emerald-700 mb-6 text-center">Welcome Back ðŸŒ¸</h1>
    
    <%= form_with url: login_path, class: "space-y-4" do |f| %>
      <div>
        <%= label_tag :email, "Email", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= email_field_tag :email, params[:email], class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "you@example.com" %>
      </div>

      <div>
        <%= label_tag :password, "Password", class: "block text-sm font-medium text-stone-700 mb-1" %>
        <%= password_field_tag :password, nil, class: "w-full px-4 py-2 border border-stone-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
      </div>

      <div class="pt-4">
        <%= submit_tag "Login", class: "w-full px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-stone-600">
      New to Early Bloom? 
      <%= link_to "Sign up here", signup_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
    </p>
  </div>
</div>
