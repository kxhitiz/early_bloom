<div class="mb-6">
  <%= link_to "&larr; Back to Users".html_safe, admin_users_path, class: "text-emerald-600 hover:text-emerald-700" %>
</div>

<div class="bg-white rounded-lg shadow-sm border border-stone-200 p-6 mb-6">
  <div class="flex items-start gap-4">
    <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-700 font-bold text-2xl">
      <%= @user.name.first.upcase %>
    </div>
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-1">
        <h1 class="text-2xl font-bold text-stone-800"><%= @user.name %></h1>
        <% if @user.admin? %>
          <span class="text-xs px-2 py-0.5 bg-purple-100 text-purple-700 rounded">Admin</span>
        <% end %>
      </div>
      <p class="text-stone-600"><%= @user.email %></p>
      <p class="text-sm text-stone-500 mt-2">Joined <%= @user.created_at.strftime("%B %d, %Y") %></p>
      <% if @user.bio.present? %>
        <p class="text-stone-600 mt-3"><%= @user.bio %></p>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4 mt-6 pt-6 border-t border-stone-200">
    <div class="text-center">
      <p class="text-2xl font-bold text-stone-800"><%= @user.posts.count %></p>
      <p class="text-sm text-stone-500">Posts</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-stone-800"><%= @user.comments.count %></p>
      <p class="text-sm text-stone-500">Comments</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-stone-800"><%= @user.child_profiles.count %></p>
      <p class="text-sm text-stone-500">Child Profiles</p>
    </div>
  </div>

  <div class="mt-6 pt-6 border-t border-stone-200">
    <%= link_to "View Public Profile", user_path(@user), target: "_blank", class: "text-emerald-600 hover:text-emerald-700" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <% if @posts.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-stone-200">
      <div class="p-4 border-b border-stone-200">
        <h2 class="font-semibold text-stone-800">Recent Posts</h2>
      </div>
      <div class="divide-y divide-stone-100">
        <% @posts.each do |post| %>
          <div class="p-4">
            <%= link_to admin_post_path(post), class: "font-medium text-stone-800 hover:text-emerald-700 block" do %>
              <%= truncate(post.title.presence || post.body, length: 50) %>
            <% end %>
            <p class="text-xs text-stone-500 mt-1"><%= time_ago_in_words(post.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @comments.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-stone-200">
      <div class="p-4 border-b border-stone-200">
        <h2 class="font-semibold text-stone-800">Recent Comments</h2>
      </div>
      <div class="divide-y divide-stone-100">
        <% @comments.each do |comment| %>
          <div class="p-4">
            <p class="text-sm text-stone-700 mb-1"><%= truncate(comment.body, length: 80) %></p>
            <p class="text-xs text-stone-500">
              on <%= link_to truncate(comment.post.title.presence || comment.post.body, length: 30), admin_post_path(comment.post), class: "text-emerald-600 hover:text-emerald-700" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
