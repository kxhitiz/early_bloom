<div>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-emerald-700">Community Feed ðŸŒ±</h1>
    <%= link_to "Share Your Experience", new_post_path, class: "px-6 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold" %>
  </div>

  <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
        <article class="bg-white p-6 rounded-lg shadow-sm border border-stone-200 hover:border-emerald-200 transition">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <%= link_to user_path(post.user), class: "w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center text-emerald-700 font-bold text-lg hover:bg-emerald-200 transition" do %>
                <%= post.user.name.first.upcase %>
              <% end %>
              <div>
                <%= link_to post.user.name, user_path(post.user), class: "font-semibold text-stone-800 hover:text-emerald-700" %>
                <p class="text-sm text-stone-500">
                  <%= post.child_profile.name %> Â· <%= post.child_profile.age_in_months %> months old Â·
                  <%= time_ago_in_words(post.published_at) %> ago
                </p>
              </div>
            </div>
            <div class="flex flex-col items-end gap-1">
              <% if post.category %>
                <span class="text-xs px-2 py-1 bg-stone-100 text-stone-600 rounded-full">
                  <%= post.category.icon %> <%= post.category.name %>
                </span>
              <% end %>
              <span class="text-xs px-3 py-1 bg-emerald-50 text-emerald-700 rounded-full font-medium">
                <%= post.post_type %>
              </span>
            </div>
          </div>
          
          <% if post.title.present? %>
            <h2 class="text-xl font-semibold text-stone-800 mb-3"><%= post.title %></h2>
          <% end %>
          
          <div class="text-stone-600 mb-4">
            <%= simple_format(truncate(post.body, length: 300)) %>
          </div>
          
          <div class="flex items-center gap-6 text-sm text-stone-500">
            <span>ðŸ’¬ <%= post.comments.count %> comments</span>
            <span>ðŸ’š <%= post.reactions.count %> reactions</span>
          </div>
          
          <div class="mt-4">
            <%= link_to "Read & Respond", post_path(post), class: "text-emerald-600 hover:text-emerald-700 font-semibold" %>
          </div>
        </article>
      <% end %>
    </div>

    <div class="mt-8">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="bg-white p-12 rounded-lg shadow-sm border border-stone-200 text-center">
      <p class="text-xl text-stone-600 mb-4">No posts yet. Be the first to share!</p>
      <%= link_to "Create the First Post", new_post_path, class: "inline-block px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold" %>
    </div>
  <% end %>
</div>
